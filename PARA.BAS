1000  _FULLSCREEN _STRETCH
1020 REM COMPUTE THE DISTANCE
1040 REM BETWEEN 2 POINTS IN THE SPACE
1060 WIDTH 40
1080 PRINT "THIS PROGRAM PRINTS RECTANGLES"
1120 INPUT "PRESS ENTER TO START"; Z
1140 SCREEN 1
1150 LET B = 50
1160 LET H = 80
1170 LET TX = 10
1180 LET TY = 100
1220 INPUT "ENTER TOP LEFT X"; TX
1240 INPUT "ENTER TOP LEFT Y"; TY
1245 PRINT "TOP LEFT P("; TX; ","; TY; ")"
1250 INPUT "ENTER BASE SIZE"; B
1255 INPUT "ENTER HEIGHT SIZE"; H
1270 CLS
1272 LOCATE INT((TY / 8 - 0.5)), INT(TX / 8 - 0.5): PRINT "A"
1274 LOCATE INT((TY / 8 - 0.5)), INT((TX + B) / 8 + 1.5): PRINT "B"
1276 LOCATE INT((TY + H) / 8 + 1.5), INT(TX / 8 - 0.5): PRINT "C"
1278 LOCATE INT(((TY + H) / 8 + 1.5)), INT((TX + B) / 8 + 1.5): PRINT "D"
1280 FOR I = 1 TO B
    1300 PSET (TX + I, TY)
1320 NEXT I
1340 FOR I = 1 TO H
    1360 PSET (TX + B, TY + I)
1380 NEXT I
1400 FOR I = 1 TO B
    1420 PSET (TX + B - I, TY + H)
1440 NEXT I
1460 FOR I = 1 TO H
    1480 PSET (TX, TY + H - I)
1500 NEXT I
1520 PRINT: PRINT: PRINT: INPUT "PRESS ENTER TO CONTINUE"; Z
1540 GOTO 1220
1560 SYSTEM
1580 END
